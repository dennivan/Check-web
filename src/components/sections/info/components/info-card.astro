---
import type { ImageMetadata } from 'astro';

import CachedImage from '@/components/shared/cachedImage.astro';
interface Props {
    image: ImageMetadata;
    title: string;
    description: string;
    className?: string;
}
const { image, title, description, className = '' } = Astro.props;
---

<div
    class="m-4 w-full overflow-hidden rounded-2xl border border-gray-400 bg-white sm:w-1/2"
>
    <div class="flex flex-col p-6 sm:flex-row">
        <div class="flex flex-col gap-4">
            <h3 class="text-3xl font-semibold">{title}</h3>
            <p class="text-[15px] font-semibold text-[#393737]">
                {description}
            </p>
        </div>
        <div class="">
            <figure>
                <CachedImage
                    src={image}
                    alt={title}
                    class={`max-h-44 min-h-44 object-cover ${className}`}
                />
            </figure>
        </div>
    </div>
</div>

---
import Button from '@/components/sections/service-section/component/button.astro';
import CachedImage from '@/components/shared/cachedImage.astro';
import ServicesImage from '@/images/section/service.webp';
---

<div class="bg-[#1F93F4]">
    <div
        class="mx-auto flex max-w-7xl flex-col items-center justify-between gap-16 p-12 sm:flex-row"
    >
        <div class="flex flex-col gap-4">
            <p class="text-6xl font-extrabold text-white">MDG AGENCY SERVICE</p>
            <p class="text-3xl font-bold text-white">Maximum Budget Savings</p>
            <Button
                text="Accept all products including GAMING, CRYPTO, RECRUITMENT, INVESTMENT, etc."
            />
            <Button
                text="Full setup support from Gologin/Adspower profile, Via, Page, Pixel, Ad accounts, Proxy. Just run!"
            />
            <Button
                text="Only account rental fee, no other fees. 100% refund upon termination of cooperation"
            />
            <Button
                text="MDG Agency Support team works 24/7. Guaranteed work in all time zones"
            />
        </div>
        <CachedImage
            src={ServicesImage}
            alt="Services Image"
        />
    </div>
</div>
